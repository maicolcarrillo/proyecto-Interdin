{
  "_comentario": "Este es mi JSON con redirect a Ecuador",
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "_comentario": "Eliminar este redicts para dejar el Home libre",
    "redirects": [
      {
        "source": "/",
        "destination": "/ecuador",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
